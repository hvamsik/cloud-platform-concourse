#!/bin/sh

set -o errexit
set -o pipefail

checkenv(){
  missing=""
  for v in URL TEAM BASIC_AUTH_USERNAME BASIC_AUTH_PASSWORD FLY_VERSION; do
    vn="CONCOURSE_${v}"
    fv=""
    eval fv="\$$vn"
    if [ -z "${fv}" ]; then
      missing="${missing}\n\t${vn}"
    fi
  done
  if [ ! -z "${missing}" ]; then
    echo "missing environment variables:${missing}"
    exit 1
  fi
}

checkenv

apk add \
  --no-cache \
  --no-progress \
  curl

curl -Lso /usr/local/bin/fly https://github.com/concourse/concourse/releases/download/${CONCOURSE_FLY_VERSION}/fly_linux_amd64
chmod +x /usr/local/bin/fly

fly \
  -t current \
  login \
  -k \
  -c ${CONCOURSE_URL} \
  -n ${CONCOURSE_TEAM} \
  -u ${CONCOURSE_BASIC_AUTH_USERNAME} \
  -p ${CONCOURSE_BASIC_AUTH_PASSWORD}

fly -t current pipelines -a | awk '{ print $1; }' | sort > current_pipelines

find "pipelines/${CONCOURSE_TEAM}" -iname '*.yaml' -exec basename {} \; | cut -d'.' -f1 | sort > git_pipelines

for i in $(comm -23 current_pipelines git_pipelines); do
  echo ">>> deleting pipeline '${i}'... (skipped)"
done

for i in $(cat git_pipelines); do
  echo ">>> setting pipeline '${i}'..."
  fly \
    -t current \
    set-pipeline \
    -n \
    -p "${i}" \
    -c "pipelines/${CONCOURSE_TEAM}/${i}.yaml"
  fly \
    -t current \
    unpause-pipeline \
    -p "${i}"
done
